<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UltraSensorScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/Frozi"
        android:gravity="center|start"
        >


        <ImageView
            android:id="@+id/img_ultra_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultrasonic  Alert"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center|top"
        >

        <ImageView
            android:id="@+id/img_fire"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/lightoff"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/tower_light"
                />

            <ImageView
                android:id="@+id/tower1Fire_gif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_marginLeft="90dp"
                android:src="@drawable/road_light_on"
                />

            <ImageView
                android:id="@+id/tower2Fire_gif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="170dp"
                android:visibility="gone"
                android:src="@drawable/road_light_on"
                />

        </RelativeLayout>

<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:id="@+id/gif"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="200dp"-->
<!--            android:src="@drawable/fire"-->
<!--            android:visibility="invisible"-->
<!--            />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/gif"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/tv_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Wait"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    />

                <TextView
                    android:id="@+id/tv_fire2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Wait"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    />
            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@color/Frozi"

            />

    </LinearLayout>

</LinearLayout>